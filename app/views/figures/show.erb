<h1><%= "#{@figure.name}" %></h1>
<div>
    <h2>Title(s)</h2>
    <ul>
        <%@figure.titles.each do |each_title|%>
            <li><%="#{each_title.name}"%></li>
        <%end%>
    </ul>
</div>

<div>
    <h2>Landmark(s)</h2>
    <ul>
        <%@figure.landmarks.each do |each_landmark|%>
            <li><a href="/landmarks/<%= each_landmark.id %>"><%="#{each_landmark.name}"%></a></li>
        <%end%>
    </ul>
</div>

<a href="/figures/<%= @figure.id %>/edit">Edit this Figure</a><br>
<a href="/figures">Return to Figures</a>
