<h1>Edit this Figure</h1>
<form method="POST" action="/figures/<%=@figure.id%>">
    <input type="hidden" name = "_method" value = "patch"/>
    <div>
        <label>Name</label>
        <input name="figure[name]" type="text" value="<%=@figure.name%>"/>
    </div>

    <div>
        <h2>Titles</h2>
        <%@titles.each do |each_title|%>
            <label><%= "#{each_title.name}" %></label>
            <%if @figure.title_ids.include?(each_title.id)%>
                <input name= "figure[title_ids][]" value="<%= each_title.id %>" type="checkbox" checked><br>
            <%else%>
                <input name= "figure[title_ids][]" value="<%= each_title.id %>" type="checkbox"><br>
            <%end%>
        <%end%>
    </div>

    <div>
        <h2>Create a New Title</h2>
        <input type="text" name="title[name]"/>
    </div>

    <div>
        <h2>Landmarks</h2>
        <%@landmarks.each do |each_landmark|%>
            <label><%= "#{each_landmark.name}" %></label>
            <%if @figure.landmark_ids.include?(each_landmark.id)%>
                <input name= "figure[landmark_ids][]" value="<%= each_landmark.id %>" type="checkbox" checked><br>
            <%else%>
                <input name= "figure[landmark_ids][]" value="<%= each_landmark.id %>" type="checkbox"><br>
            <%end%>
        <%end%>
    </div>

    <div>
        <h2>Create a New Landmark</h2>

        <label>Name:</label>
        <input type="text" name="landmark[name]"/>

        <label>Year Completed:</label>
        <input type="text" name="landmark[year_completed]"/>

    </div>
    <br>
    <input type="submit" value="Edit Figure"/>
    <br>
    <a href="/figures/<%= @figure.id %>">Return to Figure without saving changes</a>
</form>